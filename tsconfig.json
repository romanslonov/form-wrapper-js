{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "declaration": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "jest-extended"
    ]
  },
  "include": [
    "./src/**/*", "./tests/**/*"
  ],
  "exclude": [
    "node_modules", "./tests/**/*"
  ]
}
